<Window x:Class="QCLCalendarMaker.HolidayEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Holiday Editor" Height="400" Width="450">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Existing Holidays ComboBox and Delete -->
            <RowDefinition Height="Auto"/>
            <!-- Holiday Name -->
            <RowDefinition Height="Auto"/>
            <!-- Holiday Type -->
            <RowDefinition Height="Auto"/>
            <!-- Fixed Date Panel -->
            <RowDefinition Height="Auto"/>
            <!-- Nth Weekday Panel -->
            <RowDefinition Height="Auto"/>
            <!-- Last Weekday Panel -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons Panel -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Existing Holidays ComboBox and Delete Button -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Label Content="Existing Holidays:" Width="120"/>
            <ComboBox x:Name="cmbExistingHolidays" Width="200" DisplayMemberPath="Name"/>
            <Button Content="Delete" x:Name="btnDeleteHoliday" Width="75" Margin="10,0,0,0" Click="btnDeleteHoliday_Click"/>
        </StackPanel>

        <!-- Holiday Name Input -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <Label Content="Holiday Name:" Width="100"/>
            <TextBox x:Name="txtHolidayName" Width="200"/>
        </StackPanel>

        <!-- Holiday Type Selection -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,10">
            <Label Content="Holiday Type:" Width="100"/>
            <ComboBox x:Name="cmbHolidayType" Width="200" SelectionChanged="cmbHolidayType_SelectionChanged">
                <ComboBoxItem Content="Fixed Date"/>
                <ComboBoxItem Content="Nth Weekday"/>
                <ComboBoxItem Content="Last Weekday"/>
            </ComboBox>
        </StackPanel>

        <!-- Fixed Date Inputs -->
        <StackPanel x:Name="panelFixedDate" Orientation="Horizontal" Grid.Row="3" Margin="0,0,0,10" Visibility="Collapsed">
            <Label Content="Month:" Width="50"/>
            <TextBox x:Name="txtFixedMonth" Width="50"/>
            <Label Content="Day:" Width="50" Margin="10,0,0,0"/>
            <TextBox x:Name="txtFixedDay" Width="50"/>
        </StackPanel>

        <!-- Nth Weekday Inputs -->
        <StackPanel x:Name="panelNthWeekday" Orientation="Horizontal" Grid.Row="4" Margin="0,0,0,10" Visibility="Collapsed">
            <Label Content="Month:" Width="50"/>
            <TextBox x:Name="txtNthMonth" Width="50"/>
            <Label Content="Weekday:" Width="70" Margin="10,0,0,0"/>
            <ComboBox x:Name="cmbWeekday" Width="100">
                <ComboBoxItem Content="Sunday"/>
                <ComboBoxItem Content="Monday"/>
                <ComboBoxItem Content="Tuesday"/>
                <ComboBoxItem Content="Wednesday"/>
                <ComboBoxItem Content="Thursday"/>
                <ComboBoxItem Content="Friday"/>
                <ComboBoxItem Content="Saturday"/>
            </ComboBox>
            <Label Content="Occurrence:" Width="70" Margin="10,0,0,0"/>
            <TextBox x:Name="txtOccurrence" Width="50"/>
        </StackPanel>

        <!-- Last Weekday Inputs -->
        <StackPanel x:Name="panelLastWeekday" Orientation="Horizontal" Grid.Row="5" Margin="0,0,0,10" Visibility="Collapsed">
            <Label Content="Month:" Width="50"/>
            <TextBox x:Name="txtLastMonth" Width="50"/>
            <Label Content="Weekday:" Width="70" Margin="10,0,0,0"/>
            <ComboBox x:Name="cmbLastWeekday" Width="100">
                <ComboBoxItem Content="Sunday"/>
                <ComboBoxItem Content="Monday"/>
                <ComboBoxItem Content="Tuesday"/>
                <ComboBoxItem Content="Wednesday"/>
                <ComboBoxItem Content="Thursday"/>
                <ComboBoxItem Content="Friday"/>
                <ComboBoxItem Content="Saturday"/>
            </ComboBox>
        </StackPanel>

        <!-- Buttons: Add Holiday and Save Holidays -->
        <StackPanel Orientation="Horizontal" Grid.Row="6" Margin="0,0,0,10" HorizontalAlignment="Center">
            <Button Content="Add Holiday" Width="100" Height="30" Click="btnAddHoliday_Click" Margin="0,0,10,0"/>
            <Button Content="Save Holidays" Width="100" Height="30" Click="btnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>
