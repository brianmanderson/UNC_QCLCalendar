<Window x:Class="QCLCalendarMaker.TaskSetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QCLCalendarMaker"
        mc:Ignorable="d"
        Title="TaskSetWindow" Height="450" Width="600">
    <Grid>
        <StackPanel Margin="29,65,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Height="294" Width="525">
            <StackPanel Margin="0,0,0,0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <ComboBox x:Name="TaskSetComboBox"
                      Margin="0,0,0,0"
                      Width="240"
                      SelectionChanged="TaskSetCombo_SelectionChanged"/>
                <TextBox x:Name="NewTaskSetTextBox"
                         Width="133"
                         Text="{Binding TaskSetName, Mode=TwoWay}"
                         TextChanged="NewTaskSetTextBox_TextChanged"/>
                <Button Content="Add New Task Set" Width="104" Click="Button_Click"/>
            </StackPanel>

            <StackPanel Margin="0,10,0,0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <Label Content="Task Name" Width="133"/>
                <Label Content="Days for task" Width="100"/>
            </StackPanel>
            <StackPanel Margin="0,10,0,0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <TextBox x:Name="NewTaskNameTextBox"
                         Width="133"
                         TextChanged="NewTaskSetTextBox_TextChanged"/>
                <TextBox x:Name="DaysOffsetTextBox"
                         Width="100"
                         TextChanged="NewTaskSetTextBox_TextChanged"/>
                <CheckBox x:Name="AllowEditCheckBox" Content="Allow Edit?"/>
                <CheckBox x:Name="HighlightCheckBox" Content="Highlight?" Background="Yellow"/>
                <Button x:Name="AddNewTaskButton" Content="Add New Task" Width="104" Click="AddTask_Click"/>
            </StackPanel>
            <StackPanel Margin="0,20,0,0"
                        x:Name="TaskStackPanel"
                        Orientation="Vertical"
                        HorizontalAlignment="Left">
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
